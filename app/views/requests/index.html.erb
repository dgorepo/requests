<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Gender</th>
      <th>Age</th>
      <th>Function</th>
      <th>Category</th>
      <th>Description</th>
      <th>Value</th>
      <th>Send payment</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.gender %></td>
        <td><%= request.age %></td>
        <td><%= request.function %></td>
        <td><%= request.category %></td>
        <td><%= request.description %></td>
        <td><%= request.value %></td>
        <td><%= request.send_payment %></td>
        <td><%= request.pay_type %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

